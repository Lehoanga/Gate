@model IEnumerable<Gate.Models.ROOM>
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMeet.cshtml";
}

<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="container">
    <div class="body-tick mx-md-5 mt-5 pb-5">
        <div class="text-center h4 py-2 m-0 form-header">
            THÊM THẺ PHÒNG HỌP
        </div>
        <div class="bg-white">
            @if (@ViewBag.ErrorTicket != null)
            {
                <div class="alert alert-warning" role="alert">
                    @ViewBag.ErrorTicket
                </div>
            }
            @if (@ViewBag.ErrorTicketSL != null)
            {
                <div class="alert alert-warning" role="alert">
                    @ViewBag.ErrorTicketSL
                </div>
            }

            <form method="post" name="Form" onsubmit="return validate()">
                <div id="divCont">
                    <div class="collapse show idIN " id="collapseExample">
                        <div class="card card-body border-0 text-left pt-0 p checkbox-card pt-3">

                            <div class="form-row form-group">
                                <div class="col">
                                    <small class="form-text text-muted mb-1">
                                        Mã phòng họp:
                                    </small>
                                    <input name="ID" type="number" class="d-none" value="@ViewBag.room.ID">
                                    <input name="roomIDDE" id="roomID" type="text" class="form-control" value="@ViewBag.room.roomID.Trim()">
                                </div>
                            </div>

                            <div class="form-row form-group">
                                <div class="col">
                                    <small class="form-text text-muted mb-1">
                                        Thông tin phòng:
                                    </small>
                                    <input name="inforRoomDE" type="text" class="form-control" value="@ViewBag.room.inforRom">
                                </div>
                            </div>

                            <div class="form-group">
                                <span class="text-muted mb-1">
                                    Trạng thái:
                                </span>
                                @{if (@ViewBag.room.isReady == true)
                                    {
                                        <span class="mb-1 font-weight-bold text-success">
                                            Chưa mượn
                                        </span>
                                        <i class="fa-solid fa-circle text-success ml-1"></i>
                                    }
                                    else
                                    {
                                        <span class="mb-1 font-weight-bold text-primary">
                                            Đang mượn
                                        </span>
                                        <i class="fa-solid fa-circle text-danger ml-1"></i>
                                    }
                                }
                            </div>
                            <div class="text-right">
                                @{if (@ViewBag.room.isReady == true)
                                    {
                                        <button type="submit" name="submit" value="Edit" class="btn btn-primary font-weight-bold px-4 ml-2">Sửa</button>
                                        <button type="submit" name="submit" value="Delete" class="btn btn-danger font-weight-bold px-4 ml-2">Xóa</button>
                                    }
                                    else
                                    {
                                        <button type="submit" name="submit" value="Edit" class="btn btn-primary font-weight-bold px-4 ml-2" disabled>Sửa</button>
                                        <button class="btn btn-danger font-weight-bold px-4 ml-2" disabled>Xóa</button>
                                    }
                                }
                            </div>                           
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">

    function validate() {
        var a = document.forms["Form"]["roomID"].value;
        var b = document.forms["Form"]["inforRoom"].value;

        if (a === "" || b === "") {
            alert("Điền đầy đủ thông tin");
            return false;
        }
        return true;
    }
</script>

