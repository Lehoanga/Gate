
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMeet.cshtml";
}



<!-- Thêm thư viện jQuery UI -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="container">
    <div class="body-tick mx-md-5 mt-5 pb-5">
        <div class="text-center h4 py-2 m-0 form-header">
            TẠO PHIẾU MƯỢN
        </div>
        <div class="bg-white">
            @if (@ViewBag.ErrorTicket != null)
            {
                <div class="alert alert-warning" role="alert">
                    @ViewBag.ErrorTicket
                </div>
            }
            @if (@ViewBag.ErrorTicketSL != null)
            {
                <div class="alert alert-warning" role="alert">
                    @ViewBag.ErrorTicketSL
                </div>
            }
            @if (ViewBag.ErrOverlap != null)
            { foreach( var item in @ViewBag.ErrOverlap)
                {
                    <span>@item.roomID - @item.ticketID</span>
                }
                
            }
            

            <form method="post" name="Form" onsubmit="return validate()">
                <div id="divCont">
                    <div class="collapse show idIN " id="collapseExample">
                        <div class="card card-body border-0 text-left pt-0 p checkbox-card pt-3">

                            <div class="form-row form-group">
                                <div class="col">
                                    <small class="form-text text-muted mb-1">
                                        Số Ticket:
                                    </small>
                                    <input name="ticketID" type="number" class="form-control">
                                </div>
                                <div class="col">
                                    <small class="form-text text-muted mb-1">
                                        Phòng họp:
                                    </small>
                                    <select name="roomID" class="form-control">
                                        @{ foreach (var item in ViewBag.room)
                                            {
                                                <option value="@item.roomID">@item.roomID - @item.inforRom</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-row form-group">
                                <div class="col">
                                    <small class="form-text text-muted mb-1">
                                        Thời gian bắt đầu họp:
                                    </small>
                                    <input name="startDate" type="datetime-local" class="form-control">
                                </div>
                                <div class="col">
                                    <small class="form-text text-muted mb-1">
                                        Thời gian kết thức họp:
                                    </small>
                                    <input name="endDate" type="datetime-local" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <small class="form-text text-muted mb-1">
                                    Người đặt phòng:
                                </small>
                                <input name="orderName" type="text" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary font-weight-bold">Tạo Phiếu</button>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    function validate() {
        var a = document.forms["Form"]["ticketID"].value;
        var b = document.forms["Form"]["startDate"].value;
        var c = document.forms["Form"]["endDate"].value;
        var d = document.forms["Form"]["orderName"].value;

        if (a === "" || b === "" || c === "" || d === "" ) {
            alert("Điền đầy đủ thông tin");
            return false;
        }
        return true;
    }
</script>

